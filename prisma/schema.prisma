datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


generator client {
  provider = "prisma-client-js"
}


model Entry {
  id        Int      @default(autoincrement()) @id
  title     String   @db.VarChar(255)
  content   String?
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}


model User {
  id      Int      @default(autoincrement()) @id
  username   String   @unique
  passwordHash    String
  entries   Entry[]
}
